<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
    <persistence-unit name="myjpa" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:6666/test"/>
            <property name="javax.persistence.jdbc.user" value="linhui"/>
            <property name="javax.persistence.jdbc.password" value="linhui"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.hbm22ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>